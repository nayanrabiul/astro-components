---
interface Props {
   href: string;
   ariaLabel: string;
   text: string;
}
let { href, ariaLabel, text } = Astro.props;

let activePage = Astro.url.pathname === href ? true : false;
---

<a class={`${activePage ? 'px-2 py-1 rounded-lg bg-secondary min-w-full' : 'text-gray-500'} hover:text-blue-500`} href={href} aria-label={ariaLabel}>
   {text}
</a>
