{
    "extends": "astro/tsconfigs/strict",
    "compilerOptions": {
        "plugins": [
            {
                "name": "@astrojs/ts-plugin"
            }
        ],
        "baseUrl": ".",
        "paths": {
            "@/*": ["src/*"]
        },
        "jsx": "react-jsx",
        "jsxImportSource": "react",
        "module": "NodeNext",
        "moduleResolution": "NodeNext"
    },
    "files": [
        "src/**/*.astro",
        "src/**/*.tsx",
        "src/**/*.ts",
        "src/**/*.js",
        "src/**/*.jsx",
        "src/**/*.css"
    ],
    "include": [
        "src/**/*.astro",
        "src/**/*.tsx",
        "src/**/*.ts",
        "src/**/*.js",
        "src/**/*.jsx",
        "src/**/*.css"
    ]
}
